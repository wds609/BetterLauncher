<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/shortcut_view"
        android:layout_width="@dimen/gesture_shortcut_size"
        android:layout_height="@dimen/gesture_shortcut_size"
        android:layout_margin="10dp" />

    <ImageView
        android:id="@+id/gesture_icon"
        android:layout_width="@dimen/gesture_icon_size"
        android:layout_height="@dimen/gesture_icon_size"
        android:layout_gravity="end" />

</FrameLayout>
